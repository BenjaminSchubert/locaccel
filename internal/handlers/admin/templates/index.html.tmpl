<!Doctype html>
<html lang="en">
    <meta charset="utf-8">
    <title>Locaccel Admin</title>
    <link rel="stylesheet" type="text/css" href="static/style.css">

    <body>
        <h1>Locaccel Admin</h1>

        <section>
            <h2>Statistics</h2>
            <table id="statistics">
                <thead>
                    <tr>
                        <th>Component</th>
                        <th># Entries</th>
                        <th>Size</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Database</td>
                        <td>{{ .DatabaseEntries }}</td>
                        <td>{{ FormatBytes .DatabaseSize }}</td>
                    </tr>
                    <tr>
                        <td>File Cache</td>
                        <td>{{ .FileCacheEntries }}</td>
                        <td>{{ FormatBytes .FileCacheSize }}</td>
                    </tr>
                </tbody>
            </table>
        </section>

        <section>
            <h2>Breakdown</h2>
            <table id="breakdown">
                <thead>
                    <th>Hostname</th>
                    <th># Entries</th>
                    <th>Size</th>
                </thead>
                <tbody>
                {{ range $key, $info := .UsagePerHostName }}
                    <tr>
                        <td>{{ $key }}</td>
                        <td>{{ $info.Entries }}</td>
                        <td>{{ FormatBytes $info.Size }}</td>
                    </tr>
                {{ end }}
                </tbody>
            </table>
        </section>
    </body>
</html>
